<script>
  // ====== ‡∏™‡∏•‡∏±‡∏ö‡πÇ‡∏´‡∏°‡∏î Planning / Survey ======
  const planningBtn = document.getElementById("pillPlanning");
  const surveyBtn   = document.getElementById("pillSurvey");
  const planningApp = document.getElementById("appPlanning");
  const surveyApp   = document.getElementById("appSurvey");

  planningBtn.onclick = () => {
    planningBtn.classList.add("active");
    surveyBtn.classList.remove("active");
    planningApp.classList.add("active");
    surveyApp.classList.remove("active");
  };
  surveyBtn.onclick = () => {
    surveyBtn.classList.add("active");
    planningBtn.classList.remove("active");
    surveyApp.classList.add("active");
    planningApp.classList.remove("active");
  };
</script>

